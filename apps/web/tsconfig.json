{
  "extends": "@mep/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~locale/*": ["locale/*"]
    },
    "types": ["node", "react", "react-dom"],
    "typeRoots": ["./node_modules/@types", "../../node_modules/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src",
    "next-env.d.ts",
    "next.config.*",
    "../../packages/ui/src/**/*",
    "../api/src/**/*",
    "../api/src/index.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
